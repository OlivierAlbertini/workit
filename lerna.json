{
  "lerna": "2.11.0",
  "packages": [
    "packages/*",
    "services/*"
  ],
  "command": {
    "publish": {
      "npmClient": "npm",
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["*.lock"],
      "allowBranch": "master",
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "npmClient": "npm"
    }
  },
  "changelog": {
    "repo": "VilledeMontreal/workit",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enchancement": ":rocket: (Enhancement)",
      "bug": ":bug: (Bug Fix)",
      "core": ":wrench: Core",
      "documentation": ":books: (Refine Doc)",
      "feat": ":sparkles: (Feature)"
    },
    "cacheDir": ".changelog"
  },
  "useWorkspaces": true,
  "npmClient": "npm",
  "version": "independent"
}
